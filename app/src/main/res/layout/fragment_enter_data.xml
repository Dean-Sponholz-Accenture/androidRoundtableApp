<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/enterTitleEditText"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:hint="Enter Song Title">
    </EditText>

    <EditText
        android:id="@+id/enterArtistEditText"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:hint="Enter Artist">
    </EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/submitSongButton"
        android:layout_marginTop="50dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Submit Song">
    </Button>

    <Button
        android:id="@+id/syncDataButton"
        android:layout_marginTop="50dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Sync Data">
    </Button>

    </LinearLayout>


</LinearLayout>